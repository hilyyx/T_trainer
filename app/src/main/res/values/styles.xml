<resources>
    <style name="CygreCheckBox">
        <item name="android:textSize">32sp</item> <!-- Установите нужный размер шрифта -->
        <item name="android:fontFamily">@font/cygre_regular</item>
        <item name="android:layout_width">5dp</item> <!-- Уменьшите ширину чекбокса -->
        <item name="android:layout_height">5dp</item> <!-- Уменьшите высоту чекбокса -->
        <item name="android:textColor">@color/black</item> <!-- Цвет текста -->
        <item name="android:buttonTint">@color/checkbox</item> <!-- Цвет чекбокса -->
        <item name="android:buttonTintMode">src_in</item> <!-- Режим наложения цвета -->
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>
</resources>
